<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ripeti"
            android:textColor="@color/background2"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:layout_below="@id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background2"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/dialog_title_layout"
        android:id="@+id/dialog_layout"
        android:padding="25dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:buttonTint="@color/background2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Una sola volta (1 mese)"
            android:id="@+id/radioButton0"
            android:textColor="@color/background2"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:layout_below="@id/radioButton0"
            android:buttonTint="@color/background2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da lunedi a venerdi (1 mese)"
            android:id="@+id/radioButton"
            android:textColor="@color/background2"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:layout_below="@id/radioButton"
            android:buttonTint="@color/background2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutti i giorni (1 mese)"
            android:id="@+id/radioButton1"
            android:textColor="@color/background2"/>

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_layout">


        <Button
            android:background="@drawable/circle_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="ANNULLA"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</RelativeLayout>